!!!
%html
  %head
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'description', :content => "" }
    %meta{ :name => 'viewport', :content => 'width=device-width' }
    %meta{ :charset => "utf-8"}
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= full_title(yield(:title)).html_safe
    = csrf_meta_tags
    = stylesheet_link_tag 'application', '//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  %body
    = render 'shared/nav'
    = render 'shared/header'
    %div{class:"main-container #{controller_name} #{controller.action_name}"}
      = yield
    = render 'shared/footer'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %script{:crossorigin => "anonymous", :integrity => "sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn", :src => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"}
